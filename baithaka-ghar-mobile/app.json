{
  "expo": {
    "name": "Baithaka Ghar",
    "slug": "baithaka-ghar",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "scheme": "baithakaghar",
    "newArchEnabled": true,
    "description": "Book authentic homestays, hotels, and properties across Nepal and India. Experience local hospitality with Baithaka Ghar.",
    "primaryColor": "#1a1a1a",
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#1a1a1a"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.baithakaghar.app",
      "buildNumber": "1.0.0",
      "infoPlist": {
        "NSCameraUsageDescription": "Allow Baithaka Ghar to use your camera to take profile pictures and review photos.",
        "NSPhotoLibraryUsageDescription": "Allow Baithaka Ghar to access your photos to upload profile pictures and review images.",
        "NSLocationWhenInUseUsageDescription": "Allow Baithaka Ghar to access your location to show nearby properties.",
        "UIBackgroundModes": ["remote-notification"]
      },
      "appStoreUrl": "https://apps.apple.com/app/baithaka-ghar/id123456789"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#1a1a1a"
      },
      "package": "com.baithakaghar.app",
      "versionCode": 1,
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "permissions": [
        "RECEIVE_BOOT_COMPLETED",
        "VIBRATE",
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION"
      ],
      "playStoreUrl": "https://play.google.com/store/apps/details?id=com.baithakaghar.app",
      "intentFilters": [
        {
          "action": "VIEW",
          "data": [
            {
              "scheme": "https",
              "host": "baithakaghar.com",
              "pathPrefix": "/property"
            }
          ],
          "category": ["BROWSABLE", "DEFAULT"]
        }
      ]
    },
    "notification": {
      "icon": "./assets/notification-icon.png",
      "color": "#1a1a1a",
      "androidMode": "default",
      "androidCollapsedTitle": "Baithaka Ghar"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-secure-store",
      [
        "expo-image-picker",
        {
          "photosPermission": "Allow Baithaka Ghar to access your photos to upload profile pictures and review images.",
          "cameraPermission": "Allow Baithaka Ghar to use your camera to take profile pictures and review photos."
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/notification-icon.png",
          "color": "#1a1a1a",
          "sounds": ["./assets/notification.wav"]
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
